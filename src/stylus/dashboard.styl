.dashboard 
    &-panel 
        &-left
            &-item 
                display flex 
                justify-content space-between 
                align-items center
                width 100% 
                padding .5em 0
                border-bottom 1px solid gray
                &-avatar 
                    width 60px 
                    height 60px
                    margin-right .5em
                &-link 
                    width 100%
                    margin 0 auto
                    display block
                    border-radius .5em
