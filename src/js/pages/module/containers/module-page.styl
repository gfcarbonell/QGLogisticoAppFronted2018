.modules 
    &-items 
        display flex 
        flex-wrap wrap
        flex-direction column
        width 100%
        &-item 
            display flex 
            justify-content space-between 
            align-items center
            width 100% 
            padding .5em 0
            border-bottom 1px solid gray
            &-image 
                width 80px 
                height 60px 
                margin-right .5em
            &-wrap 
                width 100%
                &-link 
                    width 100%
                    margin 0 auto
                    display block
                    border-radius .5em
                    text-shadow 1px 1px 6px black
                    font-weight bolder 
                    font-size 1.1em
    &-menus 
        display flex 
        justify-content space-between 
        align-items center 
        flex-wrap wrap
        &-item 
            width 50% 
            min-width 180px
            display flex 
            justify-content center 
            align-items center 
            flex-direction column
            &-image 
                width 128px 
                height 128px
@media (min-width: 480px) 
    .modules 
        &-items 
            flex-direction row
            
            justify-content center
            &-item 
                width 200px