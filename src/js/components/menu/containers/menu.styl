.menu 
    padding 1em .5em
.menu-title 
    color #eeeeee 
.menu-items 
    display flex 
    justify-content space-between
    align-items center
    flex-wrap wrap

.menu-item
    display flex 
    justify-content space-between 
    align-items center
    width 100% 
    padding .5em 0
    border-bottom 1px solid gray
    &-avatar 
        width 60px 
        height 60px
        margin-right .5em
    &-name 
        width 90%
        margin 0 auto
        display block
        border-radius .5em


@media (min-width: 576px) 
    .menu-item
        flex-direction column 
        border-bottom 1px solid transparent
        width 350px
        &-avatar 
            height 150px 
            width 200px
@media (min-width: 1000px) 
    .menu-item
        flex-direction column 
        border-bottom 1px solid transparent
        width 350px
        &-avatar 
            height 180px 
            width 240px 